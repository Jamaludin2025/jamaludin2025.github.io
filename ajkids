<body>

  <!-- Tab Beranda -->
  <div class="tab-content active" id="berandaTab">
    <h2>Beranda</h2>
    <div id="hewanDisplay" class="hidden">
      <img id="gambarHewan" src="" alt="Gambar Hewan" />
      <div class="nama-suara-wrapper">
        <div id="namaHewanTampil"></div>
        <button onclick="putarSuara()" title="Putar suara hewan">ðŸ”Š</button>
      </div>
      <audio id="audioHewan" style="display:none;"></audio>
      <div class="center" style="margin-top: 1rem;">
        <button onclick="cariHewan()">Cari Hewan</button>
      </div>
    </div>
    <p class="center" id="pesanKosong">Belum ada data hewan ditampilkan.</p>
  </div>

  <!-- Tab Admin -->
  <div class="tab-content" id="adminTab">
    <div id="formLoginAdmin">
      <h2>Login Admin</h2>
      <label for="kodeAkses">Kode Akses:</label>
      <input type="password" id="kodeAkses" placeholder="Masukkan kode admin" />
      <button onclick="verifikasiAdmin()">Masuk</button>
    </div>

    <div id="formInputHewan" class="hidden">
      <h2>Tambah Data Hewan</h2>
      <label for="gambarInput">Upload Gambar Hewan:</label>
      <input type="file" id="gambarInput" accept="image/*" onchange="previewGambar()" />
      <img id="gambarHewanPreview" class="hidden" />

      <label for="namaHewan">Nama Hewan:</label>
      <input type="text" id="namaHewan" />

      <label for="audioInput">Upload Suara Hewan:</label>
      <input type="file" id="audioInput" accept="audio/*" />

      <button onclick="simpanDataHewan()">Simpan</button>
    </div>
  </div>

  <!-- Navigasi Tab -->
  <div class="tab-wrapper">
    <button class="tab-button active" onclick="switchTab('berandaTab', this)">Beranda</button>
    <button class="tab-button" onclick="switchTab('adminTab', this)">Admin</button>
  </div>

  <!-- Script -->
  <script>
    const kodeAdmin = "admin123";
    let dataHewan = [];

    function switchTab(tabId, btn) {
      document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
      document.getElementById(tabId).classList.add('active');
    }

    function verifikasiAdmin() {
      const inputKode = document.getElementById("kodeAkses").value;
      if (inputKode === kodeAdmin) {
        document.getElementById("formLoginAdmin").classList.add("hidden");
        document.getElementById("formInputHewan").classList.remove("hidden");
      } else {
        alert("Kode akses salah!");
      }
    }

    function previewGambar() {
      const fileInput = document.getElementById("gambarInput");
      const imgPreview = document.getElementById("gambarHewanPreview");

      if (fileInput.files.length > 0) {
        const reader = new FileReader();
        reader.onload = function(e) {
          imgPreview.src = e.target.result;
          imgPreview.classList.remove("hidden");
        };
        reader.readAsDataURL(fileInput.files[0]);
      }
    }

    function simpanDataHewan() {
      const nama = document.getElementById("namaHewan").value.trim();
      const imgSrc = document.getElementById("gambarHewanPreview").src;
      const audioInput = document.getElementById("audioInput");

      if (!nama || imgSrc === "" || audioInput.files.length === 0) {
        alert("Harap isi nama, upload gambar dan suara hewan.");
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        const audioSrc = e.target.result;
        const hewanBaru = { nama, gambar: imgSrc, audio: audioSrc };
        dataHewan.push(hewanBaru);
        localStorage.setItem("dataHewan", JSON.stringify(dataHewan));
        tampilkanHewan(hewanBaru);
        alert("Data hewan berhasil disimpan!");
      };
      reader.readAsDataURL(audioInput.files[0]);
    }

    function tampilkanHewan(hewan) {
      if (hewan) {
        document.getElementById("gambarHewan").src = hewan.gambar;
        document.getElementById("namaHewanTampil").textContent = hewan.nama;

        const audioEl = document.getElementById("audioHewan");
        audioEl.src = hewan.audio;
        audioEl.style.display = "block";

        document.getElementById("hewanDisplay").classList.remove("hidden");
        document.getElementById("pesanKosong").classList.add("hidden");
      }
    }

    function putarSuara() {
      const audio = document.getElementById("audioHewan");
      audio.play();
    }

    function cariHewan() {
      if (dataHewan.length === 0) {
        alert("Belum ada data hewan.");
        return;
      }
      const acak = Math.floor(Math.random() * dataHewan.length);
      tampilkanHewan(dataHewan[acak]);
    }

    window.onload = function () {
      const simpanan = localStorage.getItem("dataHewan");
      if (simpanan) {
        dataHewan = JSON.parse(simpanan);
        tampilkanHewan(dataHewan[0]);
      }
    };
  </script>
</body>
